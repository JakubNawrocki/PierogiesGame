{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true // Often helpful with modern libraries
  },
  "include": [
    "src/**/*.ts"
  ]
}